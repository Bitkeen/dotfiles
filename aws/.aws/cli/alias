# vim: ft=sh
[toplevel]
restart = !f() {
    aws ecs update-service --force-new-deployment --cluster "$1" --service "$2"
  }; f

stop = !f() {
    aws ecs list-tasks --cluster "$1" --service "$2" --output text --query 'taskArns' |\
        xargs -P 8 -n 1 aws ecs stop-task --cluster "$1" --task
  }; f
