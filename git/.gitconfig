[include]
    path = ~/.gitconfig.local
[alias]
    a = add
    aa = add --all
    ai = add --interactive
    ap = add --patch
    bl = blame
    br = branch
    bs = bisect
    co = checkout
    cob = checkout -b
    com = checkout master
    cop = checkout -p
    chp = cherry-pick
    ci = commit
    cia = commit --amend
    cim = commit -m
    cl = clone
    df = diff
    dfc = diff --check
    dfs = diff --staged
    dt = difftool
    lg = log --abbrev-commit
    lgg = log --all --graph --format='%C(auto)%h%C(reset)%C(auto)%d%C(reset) %s %C(green)(%cr)%C(reset) %C(cyan)<%aN>%C(reset)'
    lglr = log --left-right --oneline
    lglrm = log --left-right --oneline HEAD...master
    ; Compare with the previous branch.
    lglrp = log --left-right --oneline HEAD...@{-1}
    lps = log -p -S
    ; git-open has to be installed (https://github.com/paulirish/git-open).
    mg = merge
    mga = merge --abort
    mgc = merge --continue
    o = open
    pl = pull
    plrb = pull --rebase
    ps = push
    psf = push -f
    rb = rebase
    rba = rebase --abort
    rbi = rebase --interactive
    rbc = rebase --continue
    rbs = rebase --skip
    rs = reset
    sh = stash
    shm = stash push -m
    shps = stash push
    shd = stash drop
    shl = stash list
    shp = stash pop
    shsw = stash show -p
    sm = submodule
    sma = submodule add
    smu = submodule update --init --recursive
    st = status
    ; -s - short format, -b - show branch info in short format
    ss = status -sb
    sw = show
[core]
    editor = vim
    whitespace = true
[color "status"]
    untracked = yellow
[diff]
    tool = vimdiff
[push]
	default = current
