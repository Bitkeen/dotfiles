[include]
    path = ~/.gitconfig.local
[alias]
    a = add
    aa = add --all
    ai = add --interactive
    ap = add --patch
    bl = blame
    br = branch
    brd = branch -D
    brm = branch -m
    bs = bisect
    co = checkout
    cob = checkout -b
    com = checkout master
    cop = checkout -p
    chp = cherry-pick
    chpa = cherry-pick --abort
    chpc = cherry-pick --continue
    ; Ignore the local timezone and commit with UTC.
    ci = "!git commit --date=\"$(date -u '+%Y-%m-%dT%H:%M:%S%z')\""
    cia = commit --amend
    ; Fixup HEAD if no argument is provided.
    cif = "!sh -c '[ -z \"$1\" ] \
            && git commit --fixup HEAD || \
            git commit --fixup \"$1\"' -"
    cim = "!git commit --date=\"$(date -u '+%Y-%m-%dT%H:%M:%S%z')\" -m"
    cl = clone
    df = diff
    dfc = diff --check
    dfs = diff --staged
    dt = difftool
    ; Show the hash of HEAD.
    hh = rev-parse --short HEAD
    lg = log --abbrev-commit
    lgg = log --all --graph --format='%C(auto)%h%C(reset)%C(auto)%d%C(reset) %s %C(green)(%cr)%C(reset) %C(cyan)<%aN>%C(reset)'
    lglr = log --left-right --oneline
    lglrm = log --left-right --oneline HEAD...master
    ; Compare with the previous branch.
    lglrp = log --left-right --oneline HEAD...@{-1}
    lps = log -p -S
    ; git-open has to be installed (https://github.com/paulirish/git-open).
    mg = merge
    mga = merge --abort
    mgc = merge --continue
    o = open
    pl = pull
    plrb = pull --rebase
    ps = push
    psf = push --force-with-lease
    rb = rebase
    rba = rebase --abort
    rbi = rebase --interactive
    rbim = rebase --interactive master
    rbc = rebase --continue
    rbs = rebase --skip
    rbm = rebase master
    rs = reset
    rsp = reset --patch
    sh = stash
    shm = stash push -m
    shps = stash push
    shpp = stash push -p
    ; Run 'git stash drop' if no argument is provided,
    ; otherwise run 'git stash drop stash@{$1}'.
    shd = "!sh -c '[ -z \"$1\" ] \
            && git stash drop || \
            git stash drop stash@{\"$1\"}' -"
    shl = stash list
    shp = "!sh -c '[ -z \"$1\" ] \
            && git stash pop || \
            git stash pop stash@{\"$1\"}' -"
    shsw = "!sh -c '[ -z \"$1\" ] \
            && git stash show -p || \
            git stash show -p stash@{\"$1\"}' -"
    sm = submodule
    sma = submodule add
    smu = submodule update --init --recursive
    st = status
    ; -s - short format, -b - show branch info in short format
    ss = status -sb
    sw = show
[core]
    editor = vim
    whitespace = true
[color "status"]
    untracked = yellow
[status]
    submodulesummary = 1
[diff]
    tool = vimdiff
[push]
    default = current
[rebase]
	autosquash = true
[advice]
	detachedHead = false
[diff]
    colorMoved = zebra
[url "https://github.com/"]
    insteadOf = gh:
