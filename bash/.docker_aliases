#!/bin/sh
docker_alias() {
    key="$1"
    case "$key" in
        bd)
            cmd='build';;
        ex)
            cmd='exec -uroot -it';;
        im)
            cmd='images';;
        killall)
            cmd="kill $('docker' ps -q)";;
        lg)
            cmd="logs";;
        lgf)
            cmd='logs -f';;
        lgft)
            # --tail="all" by default
            cmd='logs -f --tail=0';;
        ps)
            cmd='ps --format table{{.ID}}\t{{.Image}}\t{{.Names}}\t{{.Status}}';;
        psf)
            cmd='ps';;
        sys)
            cmd="system";;
        rmall)
            cmd="rm $('docker' ps -aq)";;
        *)
            cmd=$1;;
    esac
    shift
    docker $cmd "$@"
}

docker_compose_alias() {
    key="$1"
    case "$key" in
        d)
            cmd='down';;
        k)
            cmd='kill';;
        lgf)
            cmd='logs -f';;
        lgft)
            # --tail="all" by default
            cmd='logs -f --tail=0';;
        pl)
            cmd='pull';;
        r)
            cmd="run";;
        rnd)
            cmd="run --no-deps --name $2";;
        rs)
            cmd="restart";;
        u)
            cmd='up';;
        ur)
            # Restart a single service. Different from restart in the
            # way that if a service in the docker-compose file has been
            # changed, it will be restarted with the new changes.
            cmd='up -d --no-deps --force-recreate';;
        *)
            cmd=$1;;
    esac
    shift
    docker-compose $cmd "$@"
}

alias docker='docker_alias'
alias docker-compose='docker_compose_alias'
