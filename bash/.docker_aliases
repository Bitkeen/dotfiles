function d {
    key="$1"
    case $key in
        ex)
            cmd="exec -uroot -it $2 /bin/sh"
            shift;;
        bd)
            cmd="build"
            shift;;
        im)
            cmd="images"
            shift;;
        ps)
            cmd="push"
            shift;;
        *)
            cmd=$1
            shift;;
    esac
    docker $cmd $@
}

function dcmp {
    key="$1"
    case $key in
        u)
            cmd='up'
            shift;;
        d)
            cmd='down'
            shift;;
        p)
            cmd='pull'
            shift;;
        l)
            cmd='logs -f'
            shift;;
        *)
            cmd=$1
            shift;;
    esac
    docker-compose $cmd $@
}
