#!/bin/sh
function docker_alias {
    key="$1"
    case $key in
        ex)
            cmd="exec -uroot -it"
            shift;;
        bd)
            cmd="build"
            shift;;
        im)
            cmd="images"
            shift;;
        *)
            cmd=$1
            shift;;
    esac
    docker $cmd $@
}

function docker_compose_alias {
    key="$1"
    case $key in
        u)
            cmd='up'
            shift;;
        d)
            cmd='down'
            shift;;
        p)
            cmd='pull'
            shift;;
        l)
            cmd='logs -f'
            shift;;
        *)
            cmd=$1
            shift;;
    esac
    docker-compose $cmd $@
}

alias docker='docker_alias'
alias docker-compose='docker_compose_alias'

alias d='docker'
alias dcmp='docker-compose'
