#!/bin/sh
function docker_alias {
    key="$1"
    case $key in
        ex)
            cmd='exec -uroot -it'
            shift;;
        bd)
            cmd='build'
            shift;;
        im)
            cmd='images'
            shift;;
        killall)
            cmd="kill $(docker ps -q)"
            shift;;
        lg)
            cmd="logs"
            shift;;
        lgf)
            cmd='logs -f --tail=0'
            shift;;
        lgft)
            # --tail="all" by default
            cmd='logs -f'
            shift;;
        ps)
            cmd='ps --format table{{.ID}}\t{{.Image}}\t{{.Names}}\t{{.RunningFor}}\t{{.Ports}}'
            shift;;
        *)
            cmd=$1
            shift;;
    esac
    docker $cmd $@
}

function docker_compose_alias {
    key="$1"
    case $key in
        u)
            cmd='up'
            shift;;
        d)
            cmd='down'
            shift;;
        p)
            cmd='pull'
            shift;;
        k)
            cmd='kill'
            shift;;
        lgf)
            cmd='logs -f --tail=0'
            shift;;
        lgft)
            # --tail="all" by default
            cmd='logs -f'
            shift;;
        r)
            cmd="run"
            shift;;
        rnd)
            cmd="run --no-deps --name $2"
            shift;;
        rs)
            cmd="restart"
            shift;;
        *)
            cmd=$1
            shift;;
    esac
    docker-compose $cmd $@
}

alias docker='docker_alias'
alias docker-compose='docker_compose_alias'
