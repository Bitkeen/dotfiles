#!/bin/sh
# Use a screenlayout selected with dmenu.

layout_dir="$HOME/.local/bin.local/screenlayout/"

options="$(find "$layout_dir" -type f)" 
choice="$(
    echo "$options" |
    awk -F '/' '{print $NF}' |
    dmenu-configured -p 'Screen layout:'
)"

full_choice="$(echo "$options" | grep "${choice}\$")"
exec "$full_choice"
