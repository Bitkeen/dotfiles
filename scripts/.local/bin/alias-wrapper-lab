#!/bin/sh
# Aliases for the lab utility (https://github.com/zaquestion/lab).
key="$1"
case "$key" in
    mrc)
        cmd="mr create --remove-source-branch";;
    mrca)
        cmd="mr create --remove-source-branch --assignee";;
    mrco)
        cmd="mr checkout";;
    mrls)
        cmd="mr list";;
    *)
        cmd="$key";;
esac
[ -n "$cmd" ] && shift
'lab' $cmd "$@"
