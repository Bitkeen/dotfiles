#!/bin/sh
# A Tor Browser wrapper that automatically disables floating mode in i3
# once the browser is properly started.
# Not a pretty way to do this, but I couldn't find anything better.

/usr/bin/tor-browser &
while ! pgrep -f .tor-browser/app/Browser/browser
do
    sleep .05
done
sleep .5
i3-msg '[class="Tor Browser"] floating disable'
