#!/bin/sh
# Aliases for systemctl.
key="$1"
case "$key" in
    lt)
        cmd="list-timers";;
    lu)
        cmd="list-units";;
    lr)
        cmd="list-units --state=running";;
    lf)
        cmd="list-units --state=failed";;
    luu)
        cmd="list-units --user";;
    lur)
        cmd="list-units --user --state=running";;
    luf)
        cmd="list-units --user --state=failed";;
    rs)
        cmd="restart";;
    sp)
        cmd="stop";;
    sr)
        cmd="start";;
    st)
        cmd="status";;
    *)
        cmd="$key";;
esac
[ -n "$key" ] && shift

'systemctl' $cmd "$@"
