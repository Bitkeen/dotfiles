# Save document history at each page change instead of only
# when closing a document.
set continuous-hist-save true

# Copy selection to system clipboard.
set selection-clipboard clipboard

#set scroll-step 80

# Set scrolling via touchpad to be smooth.
set smooth-scroll true

set default-bg \#222
set statusbar-bg \#222

unmap -
unmap =
map <C-0> zoom reset
map <C--> zoom out
map <C-=> zoom in

unmap f
unmap F
map u follow
map U display_link
